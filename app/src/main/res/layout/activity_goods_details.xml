<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/good_detail_bg"
    >
    <RelativeLayout
        android:id="@+id/layout_title"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/main_orange">
        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back"/>
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/ivBack"
            android:text="商品详情"
            android:padding="10dp"
            android:textSize="20sp"
            android:gravity="center_vertical"/>
        <ImageView
            android:id="@+id/ivShare"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/bg_share_nor"
            android:padding="8dp"
            android:layout_marginRight="5dp"
            android:layout_alignParentRight="true"/>
        <ImageView
            android:id="@+id/ivCollect"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/bg_collect_in"
            android:padding="8dp"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/ivShare"/>
        <ImageView
            android:id="@+id/ivCart"
            android:src="@mipmap/bg_cart_selected"
            android:padding="8dp"
            android:layout_marginRight="5dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@id/ivCollect"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/layout_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/layout_title"
        android:padding="20dp">
        <TextView
            android:id="@+id/tvGoodEnglishName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="xiaofeifei"
            android:textSize="20dp"/>
        <TextView
            android:id="@+id/tvGoodName"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:text="小菲菲"
            android:textSize="20dp"
            android:layout_below="@+id/tvGoodEnglishName"
            android:layout_marginTop="20dp"/>
        <TextView
            android:id="@+id/tvGoodShopPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="999元"
            android:textSize="20dp"
            android:textColor="@color/good_detail_currency_price"
            android:layout_alignParentRight="true"
            android:layout_marginRight="50dp"/>
        <TextView
            android:id="@+id/tvGoodCurrentPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="99元"
            android:textColor="@color/good_detail_currency_price"
            android:textSize="20dp"
            android:layout_alignLeft="@+id/tvGoodShopPrice"
            android:layout_marginTop="40dp"/>
        <RelativeLayout
            android:id="@+id/layout_image"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:layout_below="@+id/tvGoodCurrentPrice"
            android:layout_marginTop="40dp"
            >
            <cn.ucai.mvcfulicenter.view.SlideAutoLoopView
                android:id="@+id/slideAuto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/good_detail_bg_white"/>
            <cn.ucai.mvcfulicenter.view.FlowIndicator
                android:id="@+id/flowIndicator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                app:focus="0"
                app:count="4"
                app:r="5dp"
                app:space="3dp"
                app:focus_color="@color/good_detaul_flow_indicator_focus"
                app:normal_color="@color/gray"/>
        </RelativeLayout>
        <WebView
            android:id="@+id/wvGoodBrief"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_image"
            android:layout_marginTop="10dp"
            android:background="@color/good_detail_bg_white"/>
    </RelativeLayout>
</RelativeLayout>
